<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.SchedulingAppointmentPlanner" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Other customizations -->
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:navigationBarColor">@color/white</item>

        <!-- Set navigation bar icon color in light mode -->
        <item name="android:windowLightNavigationBar" tools:targetApi="q">true</item>

        <item name="android:windowLightStatusBar" tools:targetApi="o">true</item>

    </style>

    <style name="Theme.SchedulingAppointmentPlanner" parent="Base.Theme.SchedulingAppointmentPlanner" />

    <style name="fab_rounded">
        <item name="cornerSize">50%</item>
    </style>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_in_bottom</item>
        <item name="android:windowExitAnimation">@anim/slide_out_bottom</item>
    </style>
</resources>