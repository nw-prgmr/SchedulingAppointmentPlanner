<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout3"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginSignup.ResetFragments.GetCode" >


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginHorizontal="6dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="10dp">

            <!-- Content inside the card -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    android:background="@color/dark_pink"
                    android:gravity="center"
                    android:padding="15dp"
                    android:text="GET CODE"
                    android:textColor="@color/white"
                    android:textSize="30sp"
                    android:textStyle="normal" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="15dp"
                    android:layout_marginVertical="15dp"
                    android:gravity="center"
                    android:text="Please enter the code that send to your e-mail address"
                    android:textColor="@color/black25"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="25dp"
                    android:layout_marginTop="20dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <!-- First OTP digit -->
                    <EditText
                        android:id="@+id/otp1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/otp_box"
                        android:gravity="center"
                        android:inputType="number"
                        android:maxLength="1"
                        android:padding="10dp"
                        android:textColor="@color/light_burgundy"
                        android:textSize="18sp" />

                    <!-- Second OTP digit -->
                    <EditText
                        android:id="@+id/otp2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/otp_box"
                        android:gravity="center"
                        android:inputType="number"
                        android:maxLength="1"
                        android:padding="10dp"
                        android:textColor="@color/light_burgundy"
                        android:textSize="18sp" />

                    <!-- Third OTP digit -->
                    <EditText
                        android:id="@+id/otp3"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/otp_box"
                        android:gravity="center"
                        android:inputType="number"
                        android:maxLength="1"
                        android:padding="10dp"
                        android:textColor="@color/light_burgundy"
                        android:textSize="18sp" />

                    <!-- Fourth OTP digit -->
                    <EditText
                        android:id="@+id/otp4"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/otp_box"
                        android:gravity="center"
                        android:inputType="number"
                        android:maxLength="1"
                        android:padding="10dp"
                        android:textColor="@color/light_burgundy"
                        android:textSize="18sp" />

                    <!-- Fifth OTP digit -->
                    <EditText
                        android:id="@+id/otp5"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/otp_box"
                        android:gravity="center"
                        android:inputType="number"
                        android:maxLength="1"
                        android:padding="10dp"
                        android:textColor="@color/light_burgundy"
                        android:textSize="18sp" />

                    <!-- Sixth OTP digit -->
                    <EditText
                        android:id="@+id/otp6"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/otp_box"
                        android:gravity="center"
                        android:inputType="number"
                        android:maxLength="1"
                        android:padding="10dp"
                        android:textColor="@color/light_burgundy"
                        android:textSize="18sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="25dp"
                    android:gravity="end"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Didn't recieve a code? "
                        android:textColor="@color/inactive"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Resend Code"
                        android:textColor="@color/dark_pink"
                        android:textStyle="bold" />

                </LinearLayout>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btSubmit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginTop="25dp"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/darkpink_button"
                    android:text="S U B M I T"
                    android:textColor="@color/white"
                    android:textSize="24sp"
                    android:textStyle="normal" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>